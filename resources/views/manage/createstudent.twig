{% extends 'templates/app.twig'%}
{% set page_title = 'Add student' %}
{% block content %} 

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel-heading">Create a new student</div>
			<div class="panel-body">
				<form action="{{path_for('manage.createstudent')}}" method="post" autocomplete="off">
					<div class="form-group{{errors.name ? ' has-error' : '' }}">
						<div class="input-group">
							<span class="input-group-addon form-span">Name</span>
							<input type="text" name="name" id="name" placeholder="Enter the student name" class="form-control" value="{{ old.name }}">
						</div>
						{% if errors.name %}
						<span class="help-block">{{ errors.name | first }}</span>
						{% endif %}
					</div>
					<div class="form-group  {{ errors.phone ? ' has-error' : '' }}">
                        <div class="input-group">
                            <span class="input-group-addon form-span">phone</span>
                            <input id="phone" name="phone" class="form-control" placeholder="enter the student phone number" type="number" value="{{ old.phone }}">
                        </div>
                        {% if errors.phone %}
						<span class="help-block">{{ errors.phone | first }}</span>
						{% endif %}
                    </div>
					<div class="form-group{{errors.email ? ' has-error' : '' }}">
						<div class="input-group">
							<span class="input-group-addon form-span">E-mail</span>
							<input type="text" name="email" id="email" placeholder="student@domain.com" class="form-control" value="{{ old.email }}">
						</div>
						{% if errors.email %}
						<span class="help-block">{{ errors.email | first }}</span>
						{% endif %}
					</div>
					<button type="submit" class="btn btn-default">Add student</button>

					{{ csrf.field | raw }}
					
				</form>
			</div>
		</div>
	</div>	
	
</div>

{% endblock %}
