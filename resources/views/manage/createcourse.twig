{% extends 'templates/app.twig'%}
{% set page_title = 'Add course' %}
{% block content %} 

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel-heading">Create a new course</div>
			<div class="panel-body">
				<form action="{{path_for('manage.createcourse')}}" method="post" autocomplete="off">
					<div class="form-group{{errors.name ? ' has-error' : '' }}">
						<div class="input-group">
							<span class="input-group-addon form-span">Name</span>
							<input type="text" name="name" id="name" placeholder="Enter the course name" class="form-control" value="{{ old.name }}">
						</div>
						{% if errors.name %}
						<span class="help-block">{{ errors.name | first }}</span>
						{% endif %}
					</div>
					<div class="form-group  {{ errors.description ? ' has-error' : '' }}">
                        <div class="input-group">
                            <span class="input-group-addon form-span">Description</span>
                            <input id="description" name="description" class="form-control" placeholder="enter the course description" type="text" value="{{ old.description }}">
                        </div>
                        {% if errors.description %}
						<span class="help-block">{{ errors.description | first }}</span>
						{% endif %}
                    </div>
					<button type="submit" class="btn btn-default">Add course</button>

					{{ csrf.field | raw }}
					
				</form>
			</div>
		</div>
	</div>	
	
</div>

{% endblock %}
